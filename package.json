{
  "private": true,
  "name": "@detra-lab/esbuild-plugins",
  "version": "0.0.0",
  "description": "Detra esbuild's plugins monorepo",
  "type": "module",
  "scripts": {
    "check:tsc": "pnpm -r check:tsc",
