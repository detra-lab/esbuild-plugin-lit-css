{
  "name": "@detra-lab/esbuild-plugin-css-inline",
  "version": "0.1.0",
  "description": "A plugin for inlining and processing CSS with esbuild.",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./module.d.ts": {
      "import": "./module.d.ts",
      "types": "./module.d.ts"
    }
  },
  "scripts": {
    "check:tsc": "tsc --noEmit",
    "compile": "tsup-node",
    "build": "pnpm run compile --minify"
  },
  "devDependencies": {
    "@detra-lab/tsc": "^0.2.5",
    "@types/node": "^16.0.0",
    "terser": "^5.18.2",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "esbuild": ">=0.18",
    "lit": ">=2.7"
  },
  "peerDependenciesMeta": {
    "lit": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": {
    "name": "Detra",
    "email": "detra.lab@pm.me",
    "homepage": "https://github.com/detra-lab"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/detra-lab/esbuild-css-inline.git"
  },
  "bugs": {
    "url": "https://github.com/detra-lab/esbuild-css-inline/issues"
  },
  "keywords": [
    "esbuild-plugin",
    "esbuild",
    "postcss"
  ]
}
